<h1>Create User</h1>

<%= form_for(@user) do |form| %>

    <div class="field">
        
        <%= form.label :name %><br>
        <%= form.text_field :name %>
        
    </div>

    <div class="field">
        
        <%= form.label :email %><br>
        <%= form.text_field :email %>
        
    </div>

    <div class="actions">
        
        <%= form.submit %>
        
    </div>

<% end %>

<%= link_to 'Go to user list', users_path %>